{
  "permissions": {
    "allow": [
      "Bash(gh issue view:*)",
      "Bash(done)",
      "Bash(npm run check:*)",
      "Bash(npm run format:*)",
      "Bash(npx tsc:*)"
    ]
  },
  "disabledMcpjsonServers": [
    "patternfly",
    "playwright"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/execute-playwright-test.sh",
            "timeout": 300000
          }
        ]
      }
    ]
  }
}
